<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:WinsaneCS.ViewModels"
             xmlns:ui="using:FluentAvalonia.UI.Controls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="WinsaneCS.Views.DashboardView"
             x:DataType="vm:DashboardViewModel">
    
    <ScrollViewer HorizontalScrollBarVisibility="Disabled"
                  VerticalScrollBarVisibility="Auto">
        <Grid Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="24"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Left Column - Hardware -->
            <StackPanel Grid.Column="0" Spacing="8">
                <!-- Motherboard -->
                <ui:SettingsExpander Header="Motherboard"
                                    IsExpanded="True">
                    <ui:SettingsExpander.IconSource>
                        <ui:SymbolIconSource Symbol="Settings"/>
                    </ui:SettingsExpander.IconSource>
                    <ui:SettingsExpanderItem Content="{Binding MotherboardName}"
                                            Description="Name"/>
                </ui:SettingsExpander>
                
                <!-- CPU -->
                <ui:SettingsExpander Header="Processor (CPU)"
                                    IsExpanded="True">
                    <ui:SettingsExpander.IconSource>
                        <ui:SymbolIconSource Symbol="Settings"/>
                    </ui:SettingsExpander.IconSource>
                    <ui:SettingsExpanderItem Content="{Binding CpuName}"
                                            Description="Name"/>
                    <ui:SettingsExpanderItem Content="{Binding CpuCores}"
                                            Description="Topology"/>
                    <ui:SettingsExpanderItem Content="{Binding CpuUsage}"
                                            Description="Usage"/>
                </ui:SettingsExpander>
                
                <!-- RAM -->
                <ui:SettingsExpander Header="Memory (RAM)"
                                    IsExpanded="True">
                    <ui:SettingsExpander.IconSource>
                        <ui:SymbolIconSource Symbol="Settings"/>
                    </ui:SettingsExpander.IconSource>
                    <ui:SettingsExpanderItem Content="{Binding RamSpeed}"
                                            Description="Speed"/>
                    <ui:SettingsExpanderItem Content="{Binding RamUsage}"
                                            Description="Usage"/>
                </ui:SettingsExpander>
                
                <!-- GPU -->
                <ui:SettingsExpander Header="Graphics (GPU)"
                                    IsExpanded="True">
                    <ui:SettingsExpander.IconSource>
                                                <ui:SymbolIconSource Symbol="Image"/>
                    </ui:SettingsExpander.IconSource>
                    <ui:SettingsExpanderItem Content="{Binding GpuName}"
                                            Description="Name"/>
                    <ui:SettingsExpanderItem Content="{Binding GpuMemory}"
                                            Description="VRAM"/>
                    <ui:SettingsExpanderItem Content="{Binding GpuUsage}"
                                            Description="Usage"/>
                </ui:SettingsExpander>
            </StackPanel>
            
            <!-- Right Column - System -->
            <StackPanel Grid.Column="2" Spacing="8">
                <!-- OS Info -->
                <ui:SettingsExpander Header="Operating System"
                                    IsExpanded="True">
                    <ui:SettingsExpander.IconSource>
                                                <ui:SymbolIconSource Symbol="Globe"/>
                    </ui:SettingsExpander.IconSource>
                    <ui:SettingsExpanderItem Content="{Binding OsCaption}"
                                            Description="Edition"/>
                    <ui:SettingsExpanderItem Content="{Binding OsVersion}"
                                            Description="Build"/>
                    <ui:SettingsExpanderItem Content="{Binding OsArch}"
                                            Description="Architecture"/>
                    <ui:SettingsExpanderItem Content="{Binding OsInstallDate}"
                                            Description="Installed"/>
                    <ui:SettingsExpanderItem Content="{Binding BootTime}"
                                            Description="Last Boot"/>
                </ui:SettingsExpander>
                
                <!-- Security -->
                <ui:SettingsExpander Header="Security"
                                    IsExpanded="True">
                    <ui:SettingsExpander.IconSource>
                        <ui:SymbolIconSource Symbol="Permissions"/>
                    </ui:SettingsExpander.IconSource>
                    <ui:SettingsExpanderItem Content="{Binding SecureBootStatus}"
                                            Description="Secure Boot"/>
                    <ui:SettingsExpanderItem Content="{Binding TpmStatus}"
                                            Description="TPM"/>
                    <ui:SettingsExpanderItem Content="{Binding HyperVStatus}"
                                            Description="Hyper-V"/>
                </ui:SettingsExpander>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>
